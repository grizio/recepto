    "electron": "9.3.1",
    "electron-packager": "14.2.1",
    "rollup": "2.7.6",
    "rollup-plugin-livereload": "1.3.0",
    "rollup-plugin-svelte": "5.2.1",
    "rollup-plugin-terser": "5.3.0",
    "svelte": "3.22.2",
    "tslib": "1.11.1",
    "typescript": "3.8.3"
  },
